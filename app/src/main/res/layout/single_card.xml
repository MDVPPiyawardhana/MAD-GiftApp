<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/itemImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnItem"
        android:text="Food name"
        android:textSize="17sp"
        android:textColor="#0e11d1"
        android:layout_below="@+id/itemImage"
        android:textAlignment="center"
        android:layout_alignRight="@+id/itemImage"
        android:layout_alignEnd="@+id/itemImage"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnItem"
        android:layout_alignEnd="@+id/btnItem"
        android:layout_alignRight="@+id/btnItem"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="textPrice"
        android:textAlignment="center"
        android:textColor="#ce1309"
        android:textSize="17sp" />
</RelativeLayout>